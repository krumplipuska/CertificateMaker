{
  "manifest_version": 3,
  "name": "Local HTML Saver",
  "version": "0.1.0",
  "description": "Save current file:// HTML to disk via native host.",
  "permissions": ["nativeMessaging", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Save HTML now" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
